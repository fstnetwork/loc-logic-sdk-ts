{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "rootDir": "src",

    "emitDeclarationOnly": true,
    "declarationDir": "./target/dts",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["target"],
  // override config for ts-node
  "ts-node": {
    "compilerOptions": {
      "rootDir": ".",
      "module": "commonjs",
      "emitDeclarationOnly": false
    }
  }
}
